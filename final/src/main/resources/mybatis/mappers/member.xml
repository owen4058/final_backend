<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">
	<resultMap id="member" type="member">
	
        <result property="user_id" column="user_id" />
        <result property="user_email" column="user_email" />
        <result property="password" column="password" />
        <result property="nickname" column="nickname" />
        <result property="name" column="name" />
        <result property="pro_path" column="pro_path" />
        <result property="dateOfBirth" column="dateOfBirth" />
        <result property="createdate" column="createdate" />
        <result property="active_state" column="active_state" />
        
	</resultMap> 
	
	<select id="MemberList" resultMap="member" parameterType="int">
      <![CDATA[
      SELECT 
      		c.*
      
      FROM 
			(
			SELECT 
				ROWNUM AS RNUM, 
				A.* 
			FROM 
				(
				select 
				* 
				from 
					users 
				where active_state = 1  
				order by create_date desc
				) A 
				WHERE ROWNUM <= #{page} * 5
			) c 
			WHERE RNUM > (#{page}-1) * 5	 	
      ]]>
	</select>
	
	<select id="finduser"  resultType="member" parameterType="loginform" >
	<![CDATA[
		select * from users
		where user_id = #{user_id}		
	]]>
  </select> 
	
	<select id="loginById"  resultType="member" parameterType="loginform" >
	<![CDATA[
		select * from users
		where user_email = #{user_email}		
	]]>
  </select> 
    
    <!-- 회원가입 -->
  <insert id="insertMember"  parameterType="member"> 
		<![CDATA[
		 insert into users
		 (user_id, dateOfBirth, nickname, password, user_email, create_date, name)
		 values
		 (AAA.NEXTVAL, #{dateOfBirth}, #{nickname} , #{password}, #{user_email}, SYSDATE, #{name} )
		]]>      
	</insert>
	
	<update id="deleteMember"  parameterType="String">
	<![CDATA[
	
	UPDATE users
	SET active_state = 0
	WHERE user_id = #{user_id}

	]]>      
  </update>
   
